<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <h1>Admin Dashboard</h1>
    
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h3>Quick Actions</h3>
                    <a href="/hotels/new" class="btn btn-primary me-2">Add New Hotel</a>
                    <a href="/admin/bookings" class="btn btn-info me-2">View All Bookings</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Manage Hotels</h3>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Hotel Name</th>
                            <th>Location</th>
                            <th>Available Rooms</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% hotels.forEach(hotel => { %>
                            <tr>
                                <td><%= hotel.name %></td>
                                <td><%= hotel.location %></td>
                                <td>
                                    <form class="d-inline" action="/admin/hotels/<%= hotel._id %>/rooms" method="POST">
                                        <input type="number" name="availableRooms" value="<%= hotel.availableRooms %>" 
                                               class="form-control form-control-sm d-inline" style="width: 80px">
                                        <button type="submit" class="btn btn-sm btn-success">Update</button>
                                    </form>
                                </td>
                                <td>
                                    <a href="/hotels/<%= hotel._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                    <form class="d-inline delete-hotel-form" action="/hotels/<%= hotel._id %>?_method=DELETE" method="POST">
                                        <button type="button" class="btn btn-sm btn-danger delete-hotel-btn" 
                                                data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this hotel? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Add this modal for editing booking details -->
<div class="modal fade" id="editBookingModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editBookingForm" method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="editNumberOfRooms">Number of Rooms</label>
                        <input type="number" class="form-control" id="editNumberOfRooms" 
                               name="numberOfRooms" min="1" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="editNumberOfGuests">Number of Guests</label>
                        <input type="number" class="form-control" id="editNumberOfGuests" 
                               name="numberOfGuests" min="1" required>
                        <small class="text-muted">Maximum 2 guests per room</small>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Booking</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add this script at the bottom of the page -->
<script>
function openEditBookingModal(bookingId, rooms, guests) {
    document.getElementById('editBookingForm').action = `/admin/bookings/${bookingId}/update`;
    document.getElementById('editNumberOfRooms').value = rooms;
    document.getElementById('editNumberOfGuests').value = guests;
    new bootstrap.Modal(document.getElementById('editBookingModal')).show();
}

// Add form validation
document.getElementById('editBookingForm').addEventListener('submit', function(e) {
    const rooms = Number(document.getElementById('editNumberOfRooms').value);
    const guests = Number(document.getElementById('editNumberOfGuests').value);
    
    if (guests / rooms > 2) {
        e.preventDefault();
        alert('Maximum 2 guests allowed per room');
    }
});
</script> 