<%- layout('layouts/boilerplate') %>

<style>
    .container {
        padding: 1rem;
    }

    @media (max-width: 768px) {
        .container {
            padding: 0.5rem;
        }
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .card-header {
        background: #2c3e50;
        color: white;
        padding: 1.2rem 1.5rem;
        border: none;
    }

    .card-title {
        font-size: 1.5rem;
        margin: 0;
        font-weight: 600;
    }

    .card-body {
        padding: 1.5rem;
    }

    .booking-summary {
        background: #f8f9fa;
        padding: 1.2rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .booking-summary h4 {
        color: #2c3e50;
        font-size: 1.3rem;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .booking-summary p {
        margin-bottom: 0.8rem;
        font-size: 0.95rem;
        color: #2c3e50;
    }

    .payment-options {
        margin-top: 1.5rem;
    }

    .payment-option {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .payment-option:hover {
        border-color: #3498db;
        background: #f8f9fa;
    }

    .payment-option.selected {
        border-color: #2c3e50;
        background: #f8f9fa;
    }

    .btn {
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: #2c3e50;
        border: none;
    }

    .btn-primary:hover {
        background: #34495e;
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .card-header {
            padding: 1rem;
        }

        .card-title {
            font-size: 1.3rem;
        }

        .card-body {
            padding: 1rem;
        }

        .booking-summary {
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .booking-summary h4 {
            font-size: 1.2rem;
        }

        .booking-summary p {
            font-size: 0.9rem;
            margin-bottom: 0.6rem;
        }

        .btn {
            width: 100%;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
            padding: 0.7rem 1rem;
        }

        .row > [class*="col-"] {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }
    }

    @media (max-width: 576px) {
        .container {
            padding: 0.5rem;
        }

        .card-title {
            font-size: 1.2rem;
        }

        .booking-summary h4 {
            font-size: 1.1rem;
        }

        .booking-summary p {
            font-size: 0.85rem;
        }

        .payment-option {
            padding: 0.8rem;
        }
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">Complete Your Booking</h3>
                </div>
                <div class="card-body">
                    <div class="booking-summary mb-4">
                        <h4>Booking Summary</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Hotel:</strong> <%= hotel.name %></p>
                                <p><strong>Check-in:</strong> <%= booking.checkInDate.toLocaleDateString() %></p>
                                <p><strong>Check-out:</strong> <%= booking.checkOutDate.toLocaleDateString() %></p>
                                <p><strong>Number of Rooms:</strong> <%= booking.numberOfRooms %></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Number of Guests:</strong> <%= booking.numberOfGuests %></p>
                                <p><strong>Number of Nights:</strong> <%= booking.numberOfNights %></p>
                                <p><strong>Total Amount:</strong> â‚¹<%= booking.totalAmount %></p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="payment-options">
                        <h4 class="mb-4">Select Payment Method</h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Pay at Hotel</h5>
                                        <p class="card-text">Pay the full amount during check-in</p>
                                        <form action="/payment/cod/<%= booking._id %>" method="POST">
                                            <button type="submit" class="btn btn-primary">Confirm Booking - Pay at Hotel</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Online Payment</h5>
                                        <p class="card-text">This payment method will be available soon!</p>
                                        <button class="btn btn-secondary" disabled>Coming Soon</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 