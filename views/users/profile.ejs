<% layout('layouts/boilerplate') %>

<div class="profile-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Profile Header -->
                <div class="profile-header text-center mb-5">
                    <div class="profile-avatar mb-3">
                        <span class="avatar-letter"><%= user.username.charAt(0).toUpperCase() %></span>
                    </div>
                    <h1 class="profile-name mb-2"><%= user.username %></h1>
                    <p class="profile-email text-muted">
                        <i class="fas fa-envelope me-2"></i><%= user.email %>
                    </p>
                    <div class="profile-stats d-flex justify-content-center gap-4 mt-3">
                        <div class="stat-item">
                            <div class="stat-label">Role</div>
                            <div class="stat-value"><%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">Member Since</div>
                            <div class="stat-value"><%= new Date(user.createdAt).toLocaleDateString() %></div>
                        </div>
                    </div>
                </div>

                <!-- Admin Dashboard Link (if admin) -->
                <% if(user.role === 'admin') { %>
                <div class="admin-section mb-5">
                    <a href="/admin/dashboard" class="admin-link">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body d-flex align-items-center p-4">
                                <i class="fas fa-tachometer-alt admin-icon me-3"></i>
                                <div>
                                    <h4 class="mb-1">Admin Dashboard</h4>
                                    <p class="text-muted mb-0">Manage your site and view analytics</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>

                <!-- Account Settings -->
                <div class="account-settings">
                    <h3 class="settings-title mb-4">Account Settings</h3>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <a href="/profile/edit" class="settings-card">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center p-4">
                                        <i class="fas fa-user-edit settings-icon mb-3"></i>
                                        <h5 class="mb-2">Edit Profile</h5>
                                        <p class="text-muted mb-0">Update your information</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/change-password" class="settings-card">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center p-4">
                                        <i class="fas fa-key settings-icon mb-3"></i>
                                        <h5 class="mb-2">Password</h5>
                                        <p class="text-muted mb-0">Change your password</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/bookings" class="settings-card">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center p-4">
                                        <i class="fas fa-suitcase settings-icon mb-3"></i>
                                        <h5 class="mb-2">My Bookings</h5>
                                        <p class="text-muted mb-0">View your bookings</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <a href="/profile/edit" class="btn btn-primary">Edit Profile</a>
                    <a href="/change-password" class="btn btn-warning">Change Password</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-container {
        background-color: #ffffff;
        min-height: calc(100vh - 56px);
        margin-top: -56px;
        padding: 56px 0 0 0;
    }

    .profile-header {
        padding: 1.5rem;
        background: #ffffff;
        border-radius: 0;
        margin-top: 0;
    }

    .profile-header.text-center {
        margin-bottom: 2rem !important;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #3498db, #2980b9);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        border: 5px solid #ffffff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .avatar-letter {
        font-size: 3rem;
        font-weight: 600;
        color: white;
        text-transform: uppercase;
        font-family: 'Inter', sans-serif;
    }

    .profile-name {
        font-size: 2.2rem;
        font-weight: 700;
        color: #2c3e50;
    }

    .profile-email {
        color: #6c757d;
        font-size: 1.1rem;
    }

    .profile-stats {
        margin-top: 1rem !important;
    }

    .stat-item {
        text-align: center;
        padding: 0.75rem 1.5rem;
        background: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.03);
    }

    .stat-label {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.25rem;
    }

    .stat-value {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .admin-section {
        margin-bottom: 2rem;
    }

    .admin-link {
        text-decoration: none;
        color: inherit;
        display: block;
        transition: transform 0.2s ease;
    }

    .admin-link:hover {
        transform: translateY(-3px);
    }

    .admin-icon {
        font-size: 2rem;
        color: #3498db;
    }

    .settings-title {
        margin-bottom: 1rem;
    }

    .settings-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 50px;
        height: 3px;
        background: #3498db;
        border-radius: 3px;
    }

    .settings-card {
        text-decoration: none;
        color: inherit;
        display: block;
        transition: all 0.2s ease;
    }

    .settings-card:hover {
        transform: translateY(-5px);
    }

    .settings-icon {
        font-size: 2rem;
        color: #3498db;
        margin-bottom: 1rem;
    }

    .card {
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 10px 25px rgba(0,0,0,0.08) !important;
    }

    .row.g-4 {
        --bs-gutter-y: 1rem;
    }

    @media (max-width: 768px) {
        .profile-stats {
            flex-direction: column;
            gap: 0.75rem;
        }

        .stat-item {
            width: 100%;
        }

        .profile-container {
            padding: 2rem 0;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
        }

        .avatar-letter {
            font-size: 2.5rem;
        }

        .profile-name {
            font-size: 1.8rem;
        }
    }
</style> 