<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row">
        <!-- Profile Information -->
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                        <h3 class="mt-3"><%= user.username %></h3>
                        <p class="text-muted"><%= user.email %></p>
                    </div>
                    
                    <div class="list-group">
                        <div class="list-group-item">
                            <small class="text-muted d-block">Role</small>
                            <strong><%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></strong>
                        </div>
                        <div class="list-group-item">
                            <small class="text-muted d-block">Member Since</small>
                            <strong><%= new Date(user.createdAt).toLocaleDateString() %></strong>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <a href="/bookings" class="btn btn-outline-primary">
                            <i class="fas fa-suitcase me-2"></i>My Bookings
                        </a>
                        <% if(user.role === 'admin') { %>
                            <a href="/admin/dashboard" class="btn btn-outline-info">
                                <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Account Settings -->
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title">Account Settings</h4>
                    <div class="list-group">
                        <a href="/profile/edit" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Edit Profile</h5>
                                <i class="fas fa-user-edit"></i>
                            </div>
                            <small class="text-muted">Update your profile information</small>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Change Password</h5>
                                <i class="fas fa-key"></i>
                            </div>
                            <small class="text-muted">Update your account password</small>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Email Preferences</h5>
                                <i class="fas fa-envelope"></i>
                            </div>
                            <small class="text-muted">Manage your email notifications</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 