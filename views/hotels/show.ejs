<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= hotel.name %></h5>
                <p class="card-text"><%= hotel.location %></p>
                <p class="card-text">
                    <small class="text-muted">₹<%= hotel.price %> per night</small>
                </p>
                <p class="card-text">Available Rooms: <%= hotel.availableRooms %></p>
                <% if(hotel.description) { %>
                    <p class="card-text"><%= hotel.description %></p>
                <% } %>
                <% if(hotel.amenities && hotel.amenities.length > 0) { %>
                    <p class="card-text">
                        <strong>Amenities:</strong>
                        <%= hotel.amenities.join(', ') %>
                    </p>
                <% } %>

                <!-- Room Types Section -->
                <% if(hotel.rooms && hotel.rooms.length > 0) { %>
                    <div class="mb-4">
                        <h6 class="card-subtitle mb-2">Available Room Types:</h6>
                        <% hotel.rooms.forEach(room => { %>
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h6><%= room.roomType %></h6>
                                    <p class="mb-1">Capacity: <%= room.capacity %> persons</p>
                                    <p class="mb-0">Price: ₹<%= room.pricePerNight %> per night</p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>

                <% if(currentUser) { %>
                    <% if(currentUser.role === 'admin' || (hotel.author && hotel.author._id && hotel.author._id.equals(currentUser._id))) { %>
                        <div class="card-body">
                            <a class="card-link btn btn-info" href="/hotels/<%= hotel._id %>/edit">Edit</a>
                            <form class="d-inline delete-hotel-form" action="/hotels/<%= hotel._id %>?_method=DELETE" method="POST">
                                <button type="button" class="btn btn-danger delete-hotel-btn" 
                                        data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal">Delete</button>
                            </form>
                        </div>
                    <% } %>
                    <a href="/hotels/<%= hotel._id %>/book" class="btn btn-primary">Book Now</a>
                <% } else { %>
                    <a href="/login" class="btn btn-primary">Login to Book</a>
                <% } %>
            </div>
        </div>

        <!-- Reviews Section -->
        <% if(hotel.reviews && hotel.reviews.length > 0) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h4>Reviews</h4>
                    <% for(let review of hotel.reviews) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">
                                    By <%= review.author ? review.author.username : 'Anonymous' %>
                                </h6>
                                <p class="card-text"><%= review.body %></p>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this hotel? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div> 