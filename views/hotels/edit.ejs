<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <div class="card p-4" style="background-color: rgba(255, 255, 255, 0.9);">
        <h1 class="text-primary mb-4">Edit Hotel</h1>
        <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Hotel Name</label>
                <input class="form-control" type="text" id="name" name="hotel[name]" 
                       value="<%= hotel.name %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hotel[location]" 
                       value="<%= hotel.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="pincode">Pincode</label>
                <input class="form-control" type="text" id="pincode" name="hotel[pincode]" 
                       value="<%= hotel.pincode %>" pattern="[0-9]{6}" 
                       title="Please enter a valid 6-digit pincode" required>
                <div class="form-text">Enter a valid 6-digit pincode</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price per night</label>
                <input class="form-control <%= locals.error && locals.error.includes('Price cannot be negative') ? 'is-invalid' : '' %>" 
                       type="number" id="price" name="hotel[price]" min="0" 
                       value="<%= hotel.price %>" required>
                <% if (locals.error && locals.error.includes('Price cannot be negative')) { %>
                    <div class="invalid-feedback">
                        Price cannot be negative
                    </div>
                <% } %>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="hotel[description]" 
                          required><%= hotel.description %></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Facilities</label>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="acRooms" name="hotel[facilities][]" value="AC Rooms" 
                                   <%= hotel.facilities && hotel.facilities.includes('AC Rooms') ? 'checked' : '' %>>
                            <label class="form-check-label" for="acRooms">
                                <i class="fas fa-snowflake text-primary me-2"></i>AC Rooms
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="freeWifi" name="hotel[facilities][]" value="Free WiFi"
                                   <%= hotel.facilities && hotel.facilities.includes('Free WiFi') ? 'checked' : '' %>>
                            <label class="form-check-label" for="freeWifi">
                                <i class="fas fa-wifi text-primary me-2"></i>Free WiFi
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="parking" name="hotel[facilities][]" value="Parking Facility"
                                   <%= hotel.facilities && hotel.facilities.includes('Parking Facility') ? 'checked' : '' %>>
                            <label class="form-check-label" for="parking">
                                <i class="fas fa-parking text-primary me-2"></i>Parking Facility
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="elevator" name="hotel[facilities][]" value="Elevator"
                                   <%= hotel.facilities && hotel.facilities.includes('Elevator') ? 'checked' : '' %>>
                            <label class="form-check-label" for="elevator">
                                <i class="fas fa-elevator text-primary me-2"></i>Elevator
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="foodServices" name="hotel[facilities][]" value="Food Services (Chargeable)"
                                   <%= hotel.facilities && hotel.facilities.includes('Food Services (Chargeable)') ? 'checked' : '' %>>
                            <label class="form-check-label" for="foodServices">
                                <i class="fas fa-utensils text-primary me-2"></i>Food Services
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="houseKeeping" name="hotel[facilities][]" value="Daily House Keeping"
                                   <%= hotel.facilities && hotel.facilities.includes('Daily House Keeping') ? 'checked' : '' %>>
                            <label class="form-check-label" for="houseKeeping">
                                <i class="fas fa-broom text-primary me-2"></i>House Keeping
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="availableRooms">Available Rooms</label>
                <input class="form-control" type="number" id="availableRooms" name="hotel[availableRooms]" 
                       min="0" value="<%= hotel.availableRooms %>" required>
                <div class="form-text">Enter the number of available rooms</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Update Hotel</button>
                <a href="/hotels/<%= hotel._id %>" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div> 