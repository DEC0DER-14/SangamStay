<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <h1>My Bookings</h1>
    <div class="row">
        <% if(bookings.length === 0) { %>
            <div class="col-12">
                <p class="text-muted">No bookings found.</p>
            </div>
        <% } %>
        <% bookings.forEach(booking => { %>
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= booking.hotelId.name %></h5>
                        <p class="card-text">
                            <strong>Room Type:</strong> <%= booking.roomId.roomType %><br>
                            <strong>Number of Rooms:</strong> <%= booking.numberOfRooms %><br>
                            <strong>Number of Guests:</strong> <%= booking.numberOfGuests %><br>
                            <strong>Total Amount:</strong> â‚¹<%= booking.totalAmount %><br>
                            <strong>Status:</strong> <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : 'warning' %>">
                                <%= booking.status %>
                            </span><br>
                            <strong>Booked On:</strong> <%= booking.createdAt.toLocaleDateString() %>
                        </p>
                        <% if(booking.specialRequests) { %>
                            <p class="card-text">
                                <strong>Special Requests:</strong><br>
                                <%= booking.specialRequests %>
                            </p>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div> 