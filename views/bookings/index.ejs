<% layout('layouts/boilerplate') %>

<style>
    .container {
        padding: 1rem;
    }

    .hotels-main-heading {
        color: #2c3e50;
        font-weight: 600;
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        margin-bottom: 1.5rem;
    }

    .card-body {
        padding: 1.2rem;
    }

    .card-title {
        color: #2c3e50;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .card-text {
        color: #2c3e50;
        font-size: 0.95rem;
        margin-bottom: 0.8rem;
    }

    .badge {
        padding: 0.5rem 0.8rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    .btn {
        padding: 0.7rem 1.2rem;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .btn-sm {
        padding: 0.5rem 1rem;
        font-size: 0.85rem;
    }

    .btn-primary {
        background: #2c3e50;
        border: none;
    }

    .btn-primary:hover {
        background: #34495e;
        transform: translateY(-2px);
    }

    .modal-content {
        border-radius: 12px;
        border: none;
    }

    .modal-header {
        background: #2c3e50;
        color: white;
        border-radius: 12px 12px 0 0;
        padding: 1.2rem;
    }

    .modal-body {
        padding: 1.5rem;
    }

    .modal-footer {
        padding: 1rem 1.5rem;
        border-top: 1px solid #eee;
    }

    @media (max-width: 768px) {
        .container {
            padding: 0.5rem;
        }

        .hotels-main-heading {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .card-body {
            padding: 1rem;
        }

        .card-title {
            font-size: 1.2rem;
        }

        .card-text {
            font-size: 0.9rem;
        }

        .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .d-flex.gap-2 {
            flex-direction: column;
        }

        .modal-header {
            padding: 1rem;
        }

        .modal-body {
            padding: 1rem;
        }

        .modal-footer {
            padding: 0.8rem 1rem;
        }
    }

    @media (max-width: 576px) {
        .hotels-main-heading {
            font-size: 1.3rem;
        }

        .card-title {
            font-size: 1.1rem;
        }

        .card-text {
            font-size: 0.85rem;
        }

        .badge {
            font-size: 0.8rem;
            padding: 0.4rem 0.7rem;
        }

        .btn-sm {
            font-size: 0.8rem;
            padding: 0.4rem 0.8rem;
        }
    }

    .search-filters {
        background: #f8f9fa;
        padding: 1.2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
    }

    .search-filters .form-control {
        border-radius: 8px;
        padding: 0.7rem 1rem;
        border: 1px solid #e0e0e0;
    }

    .search-filters .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    @media (max-width: 768px) {
        .search-filters {
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .search-filters .form-control {
            margin-bottom: 0.5rem;
        }

        .search-filters .btn {
            width: 100%;
        }
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="hotels-main-heading">My Bookings</h1>
        <a href="/hotels" class="btn btn-primary">Book Another Stay</a>
        <% if(currentUser && currentUser.role === 'admin') { %>
            <form action="/bookings/clear?_method=DELETE" method="POST" 
                  onsubmit="return confirm('Are you sure you want to clear ALL bookings? This cannot be undone.')">
                <button class="btn btn-danger">Clear All Bookings (Admin)</button>
            </form>
        <% } %>
    </div>
    
    <!-- Search and Filter Bar -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/bookings" method="GET" class="row g-3">
                <!-- Search -->
                <div class="col-md-4">
                    <input type="text" class="form-control" name="search" 
                           placeholder="Search by hotel name or booking details"
                           value="<%= typeof query !== 'undefined' ? query.search : '' %>">
                </div>

                <!-- Date Range Filter -->
                <div class="col-md-3">
                    <input type="date" class="form-control" name="startDate" 
                           placeholder="Start Date"
                           value="<%= typeof query !== 'undefined' ? query.startDate : '' %>">
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control" name="endDate" 
                           placeholder="End Date"
                           value="<%= typeof query !== 'undefined' ? query.endDate : '' %>">
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Apply</button>
                </div>
            </form>
        </div>
    </div>

    <% if(bookings.length === 0) { %>
        <div class="alert alert-info">
            No bookings found. <a href="/hotels">Book your first stay!</a>
        </div>
    <% } else { %>
        <div class="row">
            <% bookings.forEach(booking => { %>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= booking.hotelId ? booking.hotelId.name : 'Hotel no longer available' %>
                            </h5>
                            <p class="card-text">
                                <strong>Room Type:</strong> 
                                <%= booking.roomId ? booking.roomId.roomType : 'Room type not available' %><br>
                                <% if(booking.checkInDate) { %>
                                    <strong>Check-in:</strong> <%= booking.checkInDate.toLocaleDateString() %> at <%= booking.checkInTime %><br>
                                    <strong>Check-out:</strong> <%= booking.checkOutDate.toLocaleDateString() %> at <%= booking.checkOutTime %><br>
                                    <strong>Number of Nights:</strong> <%= booking.numberOfNights %><br>
                                <% } %>
                                <strong>Number of Rooms:</strong> <%= booking.numberOfRooms %><br>
                                <strong>Number of Guests:</strong> <%= booking.numberOfGuests %><br>
                                <strong>Total Amount:</strong> ₹<%= booking.totalAmount %><br>
                                <strong>Status:</strong> 
                                <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : 
                                    (booking.status === 'pending' ? 'warning' : 'danger') %>">
                                    <%= booking.status.toUpperCase() %>
                                </span>
                            </p>
                            <% if(booking.specialRequests) { %>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <strong>Special Requests:</strong><br>
                                        <%= booking.specialRequests %>
                                    </small>
                                </p>
                            <% } %>
                            <p class="card-text">
                                <small class="text-muted">
                                    Booked on: <%= booking.createdAt.toLocaleDateString() %>
                                </small>
                            </p>
                            <div class="d-flex gap-2">
                                <% if(booking.hotelId) { %>
                                    <button type="button" class="btn btn-primary btn-sm" 
                                            data-bs-toggle="modal" data-bs-target="#detailsModal<%= booking._id %>">
                                        View Details
                                    </button>
                                <% } %>
                                <% if(booking.status !== 'cancelled') { %>
                                    <button type="button" class="btn btn-danger btn-sm" 
                                            data-bs-toggle="modal" data-bs-target="#cancelModal<%= booking._id %>">
                                        Cancel Booking
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Booking Details Modal -->
                <div class="modal fade" id="detailsModal<%= booking._id %>" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Booking Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>Hotel Information</h6>
                                        <p>
                                            <strong>Hotel:</strong> <%= booking.hotelId ? booking.hotelId.name : 'Hotel no longer available' %><br>
                                            <strong>Room Type:</strong> <%= booking.roomId ? booking.roomId.roomType : 'Room type not available' %><br>
                                            <strong>Number of Rooms:</strong> <%= booking.numberOfRooms %>
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Guest Information</h6>
                                        <p>
                                            <strong>Name:</strong> <%= booking.guestDetails.name %><br>
                                            <strong>Email:</strong> <%= booking.guestDetails.email %><br>
                                            <strong>Phone:</strong> <%= booking.guestDetails.phone %>
                                        </p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>Check-in/Check-out</h6>
                                        <p>
                                            <% if(booking.checkInDate) { %>
                                                <strong>Check-in:</strong> <%= booking.checkInDate.toLocaleDateString() %> at <%= booking.checkInTime %><br>
                                                <strong>Check-out:</strong> <%= booking.checkOutDate.toLocaleDateString() %> at <%= booking.checkOutTime %><br>
                                                <strong>Number of Nights:</strong> <%= booking.numberOfNights %>
                                            <% } else { %>
                                                <em>Check-in/out details not available for this booking</em>
                                            <% } %>
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Payment Details</h6>
                                        <p>
                                            <strong>Total Amount:</strong> ₹<%= booking.totalAmount %><br>
                                            <strong>Status:</strong> 
                                            <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : 
                                                (booking.status === 'pending' ? 'warning' : 'danger') %>">
                                                <%= booking.status.toUpperCase() %>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <% if(booking.specialRequests) { %>
                                    <hr>
                                    <h6>Special Requests</h6>
                                    <p><%= booking.specialRequests %></p>
                                <% } %>
                            </div>
                            <div class="modal-footer">
                                <% if(booking.hotelId) { %>
                                    <a href="/hotels/<%= booking.hotelId._id %>" class="btn btn-primary">View Hotel</a>
                                <% } %>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cancel Confirmation Modal for each booking -->
                <div class="modal fade" id="cancelModal<%= booking._id %>" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Cancel Booking</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to cancel this booking?</p>
                                <p><strong>Hotel:</strong> <%= booking.hotelId ? booking.hotelId.name : 'Hotel no longer available' %></p>
                                <p><strong>Room Type:</strong> <%= booking.roomId ? booking.roomId.roomType : 'Room type not available' %></p>
                                <p><strong>Total Amount:</strong> ₹<%= booking.totalAmount %></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <form action="/bookings/<%= booking._id %>/cancel" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Confirm Cancellation</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div> 